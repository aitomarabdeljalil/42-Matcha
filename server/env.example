# Server Configuration
PORT=8000
NODE_ENV=development

# Database Configuration
DB_HOST=postgres # use 'localhost' for local development or 'postgres' when using docker-compose
DB_PORT=5432
DB_NAME=matcha
DB_USER=matcha
DB_PASSWORD=matchapass

# JWT Configuration
JWT_ACCESS_SECRET=CHANGE_ME_IN_PRODUCTION
JWT_REFRESH_SECRET=CHANGE_ME_IN_PRODUCTION
JWT_EXPIRES_IN=7d

# Email Configuration (for sending verification emails, notifications)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=you@example.com
SMTP_PASS=strong_password_here

# File Upload Configuration
MAX_FILE_SIZE=5242880 # 5MB in bytes
UPLOAD_PATH=./uploads

# Rate Limiting
RATE_LIMIT_WINDOW=15m
RATE_LIMIT_MAX=100

# Security
CORS_ORIGIN=http://localhost:8001
BCRYPT_SALT_ROUNDS=12

# Geolocation API Key (if you're using one)
GEOLOCATION_API_KEY=

# Socket.IO Configuration
SOCKET_CORS_ORIGIN=http://localhost:8001

# Logging
LOG_LEVEL=info

# Frontend URL (for CORS and email verification links)
FRONTEND_URL=http://localhost:3000

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret